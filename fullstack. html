<div class="container">
    <h2>Student Validation Form</h2>

    <form id="studentForm" onsubmit="return validateForm()">
        
        <label>Full Name</label>
        <input type="text" id="name" required>

        <label>Email</label>
        <input type="email" id="email" required>

        <label>Mobile Number</label>
        <input type="text" id="mobile" maxlength="10" required>

        <label>Age</label>
        <input type="number" id="age" min="16" max="60" required>

        <label>Course</label>
        <select id="course" required>
            <option value="">--Select Course--</option>
            <option>BCA</option>
            <option>BBA</option>
            <option>B.Tech</option>
            <option>MCA</option>
        </select>

        <div class="error" id="errorMsg"></div>

        <button type="submit">Submit</button>
    </form>
</div>

<script>
function validateForm() {
    let name = document.getElementById("name").value.trim();
    let mobile = document.getElementById("mobile").value.trim();
    let errorMsg = document.getElementById("errorMsg");

    // Name validation (letters and spaces only)
    let namePattern = /^[A-Za-z\s]+$/;
    if (!namePattern.test(name)) {
        errorMsg.textContent = "Name should contain only letters and spaces.";
        return false;
    }

    // Mobile validation (10 digits only)
    let mobilePattern = /^[0-9]{10}$/;
    if (!mobilePattern.test(mobile)) {
        errorMsg.textContent = "Mobile number must be exactly 10 digits.";
        return false;
    }

    errorMsg.textContent = "";
    alert("Form submitted successfully!");
    return true;
}
</script>

